# RUANGFRI Testing Environment Configuration
APP_NAME="RUANGFRI Testing"
APP_ENV=dusk.local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Asia/Jakarta
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# Logging Configuration for Testing
LOG_CHANNEL=single
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration - MySQL untuk Testing dengan database terpisah
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3308
DB_DATABASE=ruangfri
DB_USERNAME=root
DB_PASSWORD=
0
# Session Configuration untuk Testing (file agar persist)
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting & Queue untuk Testing
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

# Cache Configuration untuk Testing (file agar persist)
CACHE_STORE=file
CACHE_PREFIX=testing_

# Redis Configuration (Disabled untuk Testing)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration untuk Testing
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="testing@ruangfri.test"
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (Disabled untuk Testing)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Dusk Specific Configuration
DUSK_DRIVER_URL=http://localhost:9515
DUSK_HEADLESS_DISABLED=false
DUSK_START_MAXIMIZED=false
DUSK_CHROME_DRIVER_PORT=61963

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"

# Additional Testing Configuration
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false

# Testing persistence settings
TESTING_PERSIST_DATA=true
